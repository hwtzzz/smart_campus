/**index.wxss**/
.box {
    width: 350px;
    height: 1000px;
    margin: 0 auto;
    margin-top: 10px;
    background-color: lightgrey;
}

.top-banner {
    width: 350px;
    height: 140px;
    border-radius: 30px;
    position: relative;
}

.bannerImage {
    position: absolute;
}

.banner-content {
    margin-left: 15px;
    width: 160px;
    height: 100px;
    position: absolute;
    z-index: 1;
    margin-top: 20px;
}

.go {
    font-weight: 500;
    color: white;
    width: 60px;
    height: 25px;
    font-size: 12px;
    border: 1px solid white;
    border-radius: 30px;
    text-align: center;
    line-height: 25px;
    margin-top: 10px;
}

.types {
    display: flex;
    width: 100%;
    height: 70px;
    margin-top: 10px;
    flex-direction: row;
    justify-content: space-around;

}

#typeList {
    width: 55px;
    height: 70px;
    color: black;
    font-size: 12px;
    font-weight: 600;
    text-align: center;
    font-family: "宋体";
}

.twoCardBox {
    width: 350px;
    height: 90px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.card1,
.card2 {
    width: 160px;
    height: 90px;
    background-color: lightblue;
    position: relative;
    border-radius: 15px;
    color: white;
}

.card1 {
    background: linear-gradient(-90deg, #FF8066, #FF9671);
}

.card2 {
    background: linear-gradient(-90deg, #00C9A7, #4FFBDF);
}

#cardImage1,
#cardImage2 {
    position: absolute;
    top: 10px;
}

#cardImage2 {
    left: 56px;
}

.cardContent1 {
    width: 80px;
    height: 40px;
    position: absolute;
    left: 80px;
    top: 25px;
}

.cardContent2 {
    width: 80px;
    height: 40px;
    position: absolute;
    left: 20px;
    top: 25px;
}

.noticeBox {
    width: 100%;
    height: 25px;
    margin-top: 12px;
}

.noticeBox image {
    height: 25px;
    width: 25px;
    float: left;
}

.noticeContent {
    width: 250px;
    height: 25px;
    line-height: 33px;
    float: left;
    margin-left: 10px;
    font-size: 11px;
}

.zhinanBox {
    width: 350px;
    height: 140px;
    background-color: white(211, 104, 104, 0.5);
    border-radius: 30px;
    position: relative;
    margin-top: 20px;
    position: relative;
    box-shadow: 0 5px 5px rgba(0, 0, 0, .1);
}

.zhinanBox image {
    height: 100%;
    width: 150px;
    position: absolute;
    left: 190px;
}
.zhinanContent{
    margin-left: 15px;
    width: 160px;
    height: 100px;
    position: absolute;
    z-index: 1;
    margin-top: 20px;
}
.zhinanTitle {
    font-weight: 600;
}

.zhinanText {
    font-size: 12px;
    margin-top: 10px;
    color: rgb(138, 133, 133);
}
.zhinanGo{
    font-weight: 500;
    color: white;
    width: 60px;
    height: 25px;
    font-size: 12px;
    background: linear-gradient(-90deg, #00C9A7, #4FFBDF);
    border-radius: 30px;
    text-align: center;
    line-height: 25px;
    margin-top: 10px;
}
.recommendation{
    width: 100%;
    height: 150px;
    margin-top: 20px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.recommendation1 , .recommendation2 , .recommendation3{
    background-color: white;
    width: 114px;
    height: 150px;
    border-radius: 10px;
    box-shadow: 0 5px 5px rgba(0, 0, 0, .1);
}
