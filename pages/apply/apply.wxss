/* pages/apply/apply.wxss */
.box {
    width: 350px;
    height: 1030px;
    margin: 0 auto;
    margin-top: 10px;
}

.headBox {
    width: 100%;
    height: 44px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-bottom: 2px solid #FEF7FF;
}

.headBoxTitle {
    height: 44px;
    width: 60px;
    font-size: 18px;
    font-weight: 600;
    text-align: center;
    line-height: 44px;
}

.searchBox {
    height: 25px;
    width: 200px;
    margin-top: 10px;
    border-radius: 10px;
    border: 1px solid #FEF7FF;
}

.searchBox image {
    height: 25px;
    width: 25px;
    float: left;
    margin-left: 5px;
}

.searchBox input {
    height: 25px;
    float: left;
    font-size: 12px;
    width: 160px;
    color: rgb(74, 75, 75);
    margin-left: 8px;
}

.headBoxRight {
    height: 100%;
    width: 100px;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.headBoxRight image {
    width: 23px;
    height: 23px;
}

.twoCardBox {
    width: 350px;
    height: 90px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.card1,
.card2 {
    width: 160px;
    height: 90px;
    background-color: lightblue;
    position: relative;
    border-radius: 15px;
    color: white;
}

.card1 {
    background: linear-gradient(-90deg, #FF9671, #F9F871);
}

.card2 {
    background: linear-gradient(-90deg, #00C9A7, #4FFBDF);
}

#cardImage1,
#cardImage2 {
    position: absolute;
}
#cardImage1{
    top: 20px;
    left: 10px;
}
#cardImage2 {
    top: 20px;
}

.cardContent1 {
    width: 80px;
    height: 40px;
    position: absolute;
    left: 80px;
    top: 25px;
}

.cardContent2 {
    width: 80px;
    height: 40px;
    position: absolute;
    left: 80px;
    top: 25px;
}